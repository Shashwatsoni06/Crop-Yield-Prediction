            {"Area": "Pakistan", "Item": "Wheat", "Year": 2011, "hg/ha_yield": 28414, "average_rain_fall_mm_per_year": 300.0, "pesticides_tonnes": 80000.0, "avg_temp": 23.23},
            {"Area": "Saudi Arabia", "Item": "Sorghum", "Year": 2013, "hg/ha_yield": 13384, "average_rain_fall_mm_per_year": 59.0, "pesticides_tonnes": 3024.11, "avg_temp": 26.55},
