    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const yieldData = [
            {"Area": "Albania", "Item": "Maize", "Year": 1990, "hg/ha_yield": 36613, "average_rain_fall_mm_per_year": 1485.0, "pesticides_tonnes": 121.0, "avg_temp": 16.37},
            {"Area": "Argentina", "Item": "Wheat", "Year": 1995, "hg/ha_yield": 20423, "average_rain_fall_mm_per_year": 591.0, "pesticides_tonnes": 18128.0, "avg_temp": 17.47},
            {"Area": "Australia", "Item": "Wheat", "Year": 2013, "hg/ha_yield": 18346, "average_rain_fall_mm_per_year": 534.0, "pesticides_tonnes": 30554.0, "avg_temp": 21.68},
            {"Area": "Brazil", "Item": "Soybeans", "Year": 2005, "hg/ha_yield": 24967, "average_rain_fall_mm_per_year": 1761.0, "pesticides_tonnes": 255238.0, "avg_temp": 25.13},
